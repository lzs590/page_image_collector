{
  "manifest_version": 3,
  "name": "Page Image Collector",
  "version": "0.1.0",
  "description": "右键或点击图标采集当前页图片，在扩展页展示、选择并批量下载（支持ZIP）。",
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "downloads",
    "scripting",
    "tabs",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "output.html",
        "output.js",
        "zip.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "mini-image-downloader@example.com",
      "strict_min_version": "109.0"
    }
  }
}


